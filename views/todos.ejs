<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Todo App</title>
  </head>
  <body>
    <% const finalAction = locals.action ?? "/todos"; const finalValue =
    locals.value ?? "" %>
    <div class="container mt-2">
      <h1 class="text-center">Todo App</h1>

      <form action="<%= finalAction %>" method="post">
        <div class="row">
          <div
            id="alert-message"
            class="alert alert-danger"
            role="alert"
            style="display: none"
          >
            You cannot submit empty value
          </div>
          <div class="col-10">
            <input
              type="text"
              name="name"
              value="<%= finalValue %>"
              id="todo-input-form"
              class="form-control"
              placeholder="You New Todo"
            />
          </div>
          <div class="col-2">
            <button id="add-todo" type="submit" class="btn btn-success w-100">
              Save
            </button>
          </div>
        </div>
      </form>

      <form action="/todos" method="get" class="mt-2">
        <div class="row">
          <div class="col-10">
            <input
              type="text"
              name="query"
              value=""
              class="form-control"
              placeholder="Search"
            />
          </div>
          <div class="col-2">
            <button id="add-todo" type="submit" class="btn btn-info w-100">
              search
            </button>
          </div>
        </div>
      </form>

      <ul class="list-group mt-2" id="todo-container">
        <% todos.forEach(({ id ,name }) => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <%= name %>

          <a href="/todos/edit/<%= id %>" class="btn btn-secondary me-1 ms-auto">
            edit
          </a>
          <form action="/todos/delete/<%= id %>" method="post">
            <input type="submit" value="delete" class="btn btn-danger" />
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
